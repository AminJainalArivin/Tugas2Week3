<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatTembok">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cat Tembok Tersedia:"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nippon Paint"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbTnipon"
                />

            <ImageView
                android:layout_width="184dp"
                android:layout_height="219dp"
                android:src="@drawable/tembok"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dulux"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbTdulux"
                />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="246dp"
                android:src="@drawable/tembokk"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dulux"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbTdulux2"
                />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="246dp"
                android:src="@drawable/tembokkk"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avitex"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbTavitex"
                />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="246dp"
                android:src="@drawable/tembokkkk"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nipon Paint"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbTnipon2"
                />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="246dp"
                android:src="@drawable/tembokkkkk"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>