                android:layout_marginTop="40dp"
                android:textStyle="bold"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Molwilex"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbMmolwi"
                />

            <ImageView
                android:layout_width="184dp"
                android:layout_height="219dp"
                android:src="@drawable/minyak" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avian"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbMavian"
                />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="246dp"
                android:src="@drawable/minyakk" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propan"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbMprop"
                />

            <ImageView
                android:layout_width="184dp"
                android:layout_height="219dp"
                android:src="@drawable/minyakkk" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propan"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbMprop2"
                />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="246dp"
                android:src="@drawable/minyakkkk" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nipon Paint"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/rbMnipon"
                />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="246dp"
                android:src="@drawable/minyakkkkk" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
